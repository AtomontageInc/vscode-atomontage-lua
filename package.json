{
	"name": "vscode-atomontage-lua",
	"displayName": "Atomontage API Autocomplete",
	"publisher": "AtomontageInc",
	"icon": "images/logoSquare.png",
	"description": "Atomontage API autocomplete for VS Code.",
	"version": "0.6.0",
	"keywords": [
		"EmmyLua",
		"IntelliSense",
		"lua",
		"multi-root ready",
		"atomontage"
	],
	"license": "MIT",
	"engines": {
		"vscode": "^1.58.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:lua"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Atomontage",
			"properties": {
				"atomontage.ignoreMultiRootInfo": {
					"type": "boolean",
					"default": false,
					"description": "Do not show the info window about multi root workspace again."
				}
			}
		},
		"snippets": [
			{
				"language": "lua",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/AtomontageInc/vscode-atomontage-lua.git"
	},
	"extensionDependencies": [
		"sumneko.lua"
	],
	"scripts": {
		"patch": "vsce publish patch && git push",
		"minor": "vsce publish minor && git push",
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.58.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
